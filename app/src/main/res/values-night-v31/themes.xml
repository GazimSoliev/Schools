<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.School" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/material_dynamic_neutral10
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/light_theme_is_on</item>
        <item name="android:navigationBarColor" tools:targetApi="l">
            @color/material_dynamic_neutral10
        </item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            @bool/light_theme_is_on
        </item>
    </style>

    <style name="MyFilledButtonIcon" parent="Widget.Material3.Button.Icon">
        <item name="drawableTint">@color/material_dynamic_primary20</item>
    </style>

    <style name="MyElevatedButtonIcon" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="drawableTint">@color/material_dynamic_primary80</item>
    </style>

    <style name="MyView">
        <item name="android:background">@color/material_dynamic_neutral40</item>
    </style>

    <style name="MyTabLayout">
        <item name="android:background">@color/material_dynamic_neutral10</item>
    </style>

    <style name="MyTextInputLayout">
        <item name="boxBackgroundColor">@color/material_dynamic_neutral_variant20</item>
        <item name="startIconTint">@color/material_dynamic_neutral80</item>
    </style>

    <style name="MyTextInputEditText">
        <item name="android:textColorHint">@color/material_dynamic_neutral80</item>
    </style>
</resources>